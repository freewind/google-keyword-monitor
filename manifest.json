{
  "manifest_version": 2,

  "name": "Google keywords monitor",
  "description": "monitor and collect searched google keywords",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["lodash.min.js", "background.js"],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "<all_urls>"
  ]
}